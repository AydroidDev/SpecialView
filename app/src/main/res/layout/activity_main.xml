<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.birdeveloper.specialview.SpecialLayout
        android:id="@+id/specialLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:color="#DC2222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="16dp" />

    <com.birdeveloper.specialview.SpecialLayout
        android:id="@+id/specialLayout2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        app:color="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/specialLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:radius="100dp" />

    <com.birdeveloper.specialview.SpecialLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:gradientCenterColor="#3613FF"
        app:gradientEndColor="#FF0000"
        app:gradientType="linear"
        app:gradientAngle="LEFT_RIGHT"
        app:gradientStartColor="#FF8C00"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/specialLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:radius="100dp" />

    <com.birdeveloper.specialview.SpecialLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:bottomLeftRadius="100dp"
        app:bottomRightRadius="0dp"
        app:shadowColor="#000000"
        app:shadow="false"
        app:shadowAlpha="255"
        app:color="#3488E1"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specialLayout"
        app:topLeftRadius="100dp"
        app:topRightRadius="100dp" />
</androidx.constraintlayout.widget.ConstraintLayout>